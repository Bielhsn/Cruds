@model IEnumerable<Cruds.Models.Assessment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Avalliações</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentário)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comentário)
            </td>
            <td>
                <button asp-action="Edit" asp-route-id="@item.Id">Editar</button> |
                <button asp-action="Details" asp-route-id="@item.Id">Detalhes</button> |
                <button asp-action="Delete" asp-route-id="@item.Id">Deletar</button>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <button asp-action="Create">Criar nova avaliação</button>
</p>